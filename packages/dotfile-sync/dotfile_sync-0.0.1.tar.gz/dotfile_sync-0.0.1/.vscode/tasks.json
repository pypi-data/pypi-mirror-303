  "version": "2.0.0",
  "tasks": [
    {
      "label": "Publish to TestPyPi",
      "type": "shell",
      "command": "rm -rf dist && python -m build && twine upload --repository testpypi dist/*"
    },
    {
      "label": "Publish to PyPi",
      "type": "shell",
      "command": "rm -rf dist && python -m build && twine upload --repository pypi dist/*"
    }
  ]
}