CTLSPEC
    AG (I_3.OS2.HZ_31.output = Success -> AX( A [I_3.OS2.SS_311.output = Running U I_3.OS2.SS_311.goal_reached]));

-- PROPOSITION 3
-- Verify that when a hazard found under the identified operating scenatio, its corresponding safety state action 
