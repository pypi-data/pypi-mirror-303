MODULE I_2(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25, Event_condition_OS1, Event_condition_OS2, Event_condition_OS3)
  VAR
    condition_OS1 : bt_condition(TRUE, condition & Event_condition_OS1);
    OS1 : OS1(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25);
    seq_0 : bt_sequence(condition_OS1, OS1);
    condition_OS2 : bt_condition(TRUE, condition & Event_condition_OS2);
    OS2 : OS2(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25);
    seq_1 : bt_sequence(condition_OS2, OS2);
    condition_OS3 : bt_condition(TRUE, condition & Event_condition_OS3);
    OS3 : OS3(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25);
    seq_2 : bt_sequence(condition_OS3, OS3);
    fallback_0 : bt_fallback(seq_0, seq_1);
    fallback_1 : bt_fallback(fallback_0, seq_2);
  DEFINE
    output := fallback_1.output;

MODULE main
  FROZENVAR
    os: {os1, os2, os3};
    Event_E21: boolean;
    Event_E22: boolean;
    Event_E23: boolean;
    Event_E24: boolean;
    Event_E25: boolean;
    Event_condition_OS1: boolean;
    Event_condition_OS2: boolean;
    Event_condition_OS3: boolean;
  ASSIGN
    ASSIGN
    init(Event_condition_OS1) := os = os1;
    ASSIGN
    init(Event_condition_OS2) := os = os2;
    ASSIGN
    init(Event_condition_OS3) := os = os3;
  VAR
    I_2 : I_2(TRUE, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25, Event_condition_OS1, Event_condition_OS2, Event_condition_OS3);
