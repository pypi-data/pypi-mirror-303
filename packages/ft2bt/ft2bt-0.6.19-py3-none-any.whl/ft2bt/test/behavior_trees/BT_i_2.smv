MODULE HZ_22(condition, Event_E22, Event_E25)
  VAR
    E22 : bt_condition(TRUE, condition & Event_E22);
    E25 : bt_condition(TRUE, condition & Event_E25);
    fallback_0 : bt_fallback(E22, E25);
  DEFINE
    output := fallback_0.output;

MODULE HZ_23(condition, Event_E23, Event_E24)
  VAR
    E24 : bt_condition(TRUE, condition & Event_E24);
    E23 : bt_condition(TRUE, condition & Event_E23);
    fallback_0 : bt_fallback(E24, E23);
  DEFINE
    output := fallback_0.output;

MODULE HZ_21(condition, Event_E21)
  VAR
    E21 : bt_condition(TRUE, condition & Event_E21);
  DEFINE
    output := E21.output;

MODULE OS3(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25)
  VAR
    HZ_21 : HZ_21(condition, Event_E21);
    SS_211 : bt_action(HZ_21.output = Success);
    seq_0 : bt_sequence(HZ_21, SS_211);
    HZ_22 : HZ_22(condition, Event_E22, Event_E25);
    SS_221 : bt_action(HZ_22.output = Success);
    seq_1 : bt_sequence(HZ_22, SS_221);
    HZ_23 : HZ_23(condition, Event_E23, Event_E24);
    SS_231 : bt_action(HZ_23.output = Success);
    seq_2 : bt_sequence(HZ_23, SS_231);
    fallback_0 : bt_fallback(seq_0, seq_1);
    fallback_1 : bt_fallback(fallback_0, seq_2);
  DEFINE
    output := fallback_1.output;

MODULE OS1(condition, Event_E21, Event_E22, Event_E23, Event_E24, Event_E25)
  VAR
    HZ_21 : HZ_21(condition, Event_E21);
    SS_211 : bt_action(HZ_21.output = Success);
    seq_0 : bt_sequence(HZ_21, SS_211);
    HZ_22 : HZ_22(condition, Event_E22, Event_E25);
    SS_221 : bt_action(HZ_22.output = Success);
    seq_1 : bt_sequence(HZ_22, SS_221);
    HZ_23 : HZ_23(condition, Event_E23, Event_E24);
    SS_231 : bt_action(HZ_23.output = Success);
    seq_2 : bt_sequence(HZ_23, SS_231);
    fallback_0 : bt_fallback(seq_0, seq_1);
