MODULE I_1(condition, Event_E11, Event_E12, Event_E13, Event_E14, Event_E15, Event_E16, Event_condition_OS1, Event_condition_OS2, Event_condition_OS3)
  VAR
    condition_OS3 : bt_condition(TRUE, condition & Event_condition_OS3);
    OS3 : OS3(condition, Event_E11, Event_E12, Event_E13, Event_E14, Event_E15, Event_E16);
    seq_0 : bt_sequence(condition_OS3, OS3);
    condition_OS2 : bt_condition(TRUE, condition & Event_condition_OS2);
    OS2 : OS2(condition, Event_E11, Event_E12, Event_E13, Event_E14, Event_E15, Event_E16);
    seq_1 : bt_sequence(condition_OS2, OS2);
    condition_OS1 : bt_condition(TRUE, condition & Event_condition_OS1);
    OS1 : OS1(condition, Event_E11, Event_E12, Event_E13, Event_E14, Event_E15, Event_E16);
    seq_2 : bt_sequence(condition_OS1, OS1);
    fallback_0 : bt_fallback(seq_0, seq_1);
    fallback_1 : bt_fallback(fallback_0, seq_2);
  DEFINE
    output := fallback_1.output;

MODULE main
  FROZENVAR
    os: {os1, os2, os3};
    Event_E11: boolean;
    Event_E12: boolean;
    Event_E13: boolean;
    Event_E14: boolean;
    Event_E15: boolean;
    Event_E16: boolean;
    Event_condition_OS1: boolean;
    Event_condition_OS2: boolean;
    Event_condition_OS3: boolean;
  ASSIGN
    ASSIGN
    init(Event_condition_OS1) := os = os1;
    ASSIGN
    init(Event_condition_OS2) := os = os2;
    ASSIGN
    init(Event_condition_OS3) := os = os3;
  VAR
    I_1 : I_1(TRUE, Event_E11, Event_E12, Event_E13, Event_E14, Event_E15, Event_E16, Event_condition_OS1, Event_condition_OS2, Event_condition_OS3);
