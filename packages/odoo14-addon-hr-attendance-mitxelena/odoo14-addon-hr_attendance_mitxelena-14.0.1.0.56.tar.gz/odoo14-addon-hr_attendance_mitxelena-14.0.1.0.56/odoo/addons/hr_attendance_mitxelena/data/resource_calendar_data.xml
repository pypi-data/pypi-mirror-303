<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="workshop_calendar" model="resource.calendar">
            <field name="name">Workshop (40 hours/week)</field>
            <field name="company_id" ref="base.main_company" />
            <field name="hours_per_day">8</field>
            <field name="mother_calendar">True</field>
            <field name="attendance_ids" eval="[]"/>
        </record>
        <record id="office_calendar" model="resource.calendar">
            <field name="name">Office (38:45 hours/week)</field>
            <field name="company_id" ref="base.main_company" />
            <field name="hours_per_day">7.75</field>
            <field name="mother_calendar">True</field>
            <field name="attendance_ids" eval="[]"/>
        </record>
        <record id="reduced_hours_calendar" model="resource.calendar">
            <field name="name">Reduced hours (30 hours/week)</field>
            <field name="company_id" ref="base.main_company" />
            <field name="hours_per_day">6</field>
            <field name="mother_calendar">True</field>
            <field name="attendance_ids" eval="[]"/>
        </record>
    </data>
</odoo>
