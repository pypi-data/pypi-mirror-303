<odoo>
    <record id="view_hr_leave_allocation_modification_wizard_form" model="ir.ui.view">
        <field name="name">hr.leave.allocation.modification.wizard.form</field>
        <field name="model">hr.leave.allocation.modification.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="substraction" />
                    <field name="hours" widget="float_time"/>
                    <field name="comment" />
                </group>
                <footer>
                    <button
            string="Modify Leave"
            type="object"
            class="btn-primary"
            name="modify_allocation"
          />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Define la acciÃ³n de informe -->
    <record id="action_hr_leave_allocation_modification_wizard" model="ir.actions.act_window">
        <field name="name">Modify Leave</field>
        <field name="res_model">hr.leave.allocation.modification.wizard</field>
        <field name="view_mode">form</field>
        <field
      name="view_id"
      ref="hr_attendance_mitxelena.view_hr_leave_allocation_modification_wizard_form"
    />
        <field name="target">new</field>
    </record>

    <!-- Add a button calling the action on form view-->
    <record id="view_hr_leave_allocation_form" model="ir.ui.view">
        <field name="name">hr.leave.allocation.form</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                    <button
            name="%(action_hr_leave_allocation_modification_wizard)d"
            string="Modify Leave"
            type="action"
            class="btn-primary"
          />
            </xpath>
        </field>
    </record>
</odoo>
