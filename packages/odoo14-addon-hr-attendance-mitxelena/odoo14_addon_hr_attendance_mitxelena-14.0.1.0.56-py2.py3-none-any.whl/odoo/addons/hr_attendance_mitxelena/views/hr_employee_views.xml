<odoo>
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">view.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button
          name="button_preview_attendance_report"
          string="Preview Attendance Report"
          type="object"
          class="oe_highlight"
        />
            </xpath>

            <xpath expr="//field[@name='resource_calendar_id']" position="before">
                <field name="mother_calendar_id" />
            </xpath>
        </field>
    </record>
</odoo>
