<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_resource_calendar_attendance_tree" model="ir.ui.view">
        <field name="name">resource.calendar.attendance.tree</field>
        <field name="model">resource.calendar.attendance</field>
        <field name="inherit_id" ref="hr_attendance_overtime.view_resource_calendar_attendance_tree" />
        <field name="priority">100</field>
        <field name="groups_id" eval="[(4, ref('hr_attendance.group_hr_attendance_manager'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hour_check_in_from']" position="replace" />
            <xpath expr="//field[@name='hour_check_in_to']" position="replace" />
            <xpath expr="//field[@name='hour_check_out_from']" position="replace" />
            <xpath expr="//field[@name='hour_check_out_to']" position="replace" />
        </field>
    </record>
</odoo>
