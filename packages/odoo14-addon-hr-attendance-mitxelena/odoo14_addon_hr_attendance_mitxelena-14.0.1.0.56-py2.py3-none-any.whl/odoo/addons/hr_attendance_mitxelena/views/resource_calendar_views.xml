<odoo>
    <data>
        <record id="view_resource_calendar_form_inherited" model="ir.ui.view">
            <field name="name">resource.calendar.form.inherited</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='resource_details']/group" position="after">
                    <group name="Monthly settings">
                        <field name="bussiness_days" />
                        <field name="mother_calendar" />
                    </group>
                </xpath>
                <xpath expr="//page[@name='global_leaves']" position="after">

                    <page
            string="Child calendars"
            name="child_calendars_page"
            attrs="{'invisible': [('mother_calendar', '=', False)]}"
          >
                        <field name="child_calendars">
                            <tree>
                                <field name="name" />
                                <field name="bussiness_days" />
                            </tree>
                        </field>
                    </page>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
